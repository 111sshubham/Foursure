<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/liveensure_rollover_black"
    tools:context=".MiniLiveEnsureActivity" >

    <LinearLayout
        android:id="@+id/busy_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="100" >

        <TextView
            android:id="@+id/busy_padding_top"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="30"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/busy_content"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="40"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="100" >

            <ImageView
                android:id="@+id/circle1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="20dp"
                android:layout_weight="13"
                android:contentDescription="@string/app_name"
                android:gravity="center"
                android:src="@drawable/lecircle"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/circle2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="20dp"
                android:layout_weight="13"
                android:contentDescription="@string/app_name"
                android:gravity="center"
                android:src="@drawable/lecircle"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/circle3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="20dp"
                android:layout_weight="13"
                android:contentDescription="@string/app_name"
                android:gravity="center"
                android:src="@drawable/lecircle"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/circle4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="20dp"
                android:layout_weight="13"
                android:contentDescription="@string/app_name"
                android:gravity="center"
                android:src="@drawable/lecircle"
                android:visibility="visible" />
        </LinearLayout>

        <TextView
            android:id="@+id/busy_padding_bottom"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="30"
            android:visibility="invisible" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>