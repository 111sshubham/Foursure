<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:id="@+id/lyt_main_graphics"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:orientation="vertical"
        android:visibility="visible"
        android:weightSum="100" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="10"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/img_lock"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="40"
            android:contentDescription="@string/app_name"
            android:src="@drawable/app_logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="7"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="5"
            android:contentDescription="@string/app_name"
            android:src="@drawable/foursure_name_logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="10"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/lyt_btn_settings"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="20"
            android:gravity="right"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="100" >

            <TextView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="85"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="30dp"
                android:layout_weight="15"
                android:background="@android:color/transparent"
                android:contentDescription="@string/button1_text"
                android:gravity="right"
                android:scaleType="fitEnd"
                android:src="@drawable/icon_gears" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="7"
            android:visibility="invisible" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/lyt_front_page_windowshade"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:visibility="gone" >
    </RelativeLayout>

</FrameLayout>