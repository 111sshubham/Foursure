<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:id="@+id/lyt_share_chal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible"
        android:weightSum="100" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="2"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/lyt_share_url_entry"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="10"
            android:background="#de680d"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="100" >

            <ImageView
                android:id="@+id/btn_share_finish"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:background="@android:color/transparent"
                android:contentDescription="@string/app_name"
                android:scaleType="fitCenter"
                android:src="@drawable/home"
                android:visibility="visible" />

            <TextView
                android:id="@+id/short_code_value"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="70"
                android:background="@android:color/transparent"
                android:clickable="false"
                android:ellipsize="end"
                android:gravity="center"
                android:inputType="none"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/btn_share_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:background="@android:color/transparent"
                android:contentDescription="@string/app_name"
                android:scaleType="fitCenter"
                android:src="@drawable/pencil"
                android:visibility="visible" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="8"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/lyt_btns_row_1"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="18"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="100" >

            <ImageView
                android:id="@+id/share_factor_knowledge"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:contentDescription="@string/app_name"
                android:paddingRight="20dp"
                android:scaleType="fitEnd"
                android:src="@drawable/icon_knowledge"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/share_factor_location"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:contentDescription="@string/app_name"
                android:paddingLeft="20dp"
                android:scaleType="fitStart"
                android:src="@drawable/icon_location"
                android:visibility="visible" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="6"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/lyt_btns_row_2"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="18"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="100" >

            <ImageView
                android:id="@+id/share_factor_time"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:contentDescription="@string/app_name"
                android:paddingRight="20dp"
                android:scaleType="fitEnd"
                android:src="@drawable/icon_time"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/share_factor_behavior"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:contentDescription="@string/app_name"
                android:paddingLeft="20dp"
                android:scaleType="fitStart"
                android:src="@drawable/icon_behavior"
                android:visibility="visible" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="17"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/lyt_btns_row_3"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="18"
            android:orientation="horizontal"
            android:visibility="visible"
            android:weightSum="100" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/share_option_shield"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:contentDescription="@string/app_name"
                android:scaleType="fitEnd"
                android:src="@drawable/icon_shield"
                android:visibility="visible" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/share_create"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_weight="30"
                android:contentDescription="@string/app_name"
                android:scaleType="centerInside"
                android:src="@drawable/icon_share_orange" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/share_option_track"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:contentDescription="@string/app_name"
                android:scaleType="fitEnd"
                android:src="@drawable/icon_track" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:visibility="invisible" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="3"
            android:visibility="invisible" />
    </LinearLayout>

</FrameLayout>